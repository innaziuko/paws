<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
  <% @spaces.each do |space| %>
  <div class="col">
    <div class="card">
      <%= image_tag "space.jpg", alt: "" %>
      <div class="card-body">
        <h5 class="card-title"><%= space.name %></h5>
        <p class="card-text mb-0"><%= space.address %></p>
        <p class="card-text mt-0"><%= "â‚¬#{space.price}/h" %></p>
        <a href=<%= "/spaces/#{space.id}" %> class="btn btn-primary" role="button">Discover more</a>
        <% if Booking.find_by(space: space, user: current_user).present? %>
        <button class="btn btn-primary"> Booked </button>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
